#!/usr/bin/env perl

# $Id$

use strict;
use warnings;

use File::Slurp;

my ($label, $mean, $stddev, $range);

print q(\begin{tabular}[]{lrrr}) . qq{\n};

$label  = q{};
$mean   = q{Mean};
$stddev = q{Std Dev};
$range  = q{Range};
print qq{$label & $mean & $stddev & $range \\\\\n};

foreach my $file (@ARGV) {
    my @lines = read_file($file);
    my %data;
    foreach my $line (@lines) {
        my ($key, $value) = split /: /, $line;
        $data{$key} = $value;
    }
    $label  = $data{q{Row}};
    chomp $label;
    $mean   = sprintf q{%.2f\%%}, $data{q{Mean}};
    $stddev = sprintf q{%.2f\%%}, $data{q{Standard deviation}};
    $range  = sprintf q{%.2f--%.2f\%%},
                $data{Mean} - $data{q{Standard deviation}},
                $data{Mean} + $data{q{Standard deviation}};
    print qq{$label & $mean & $stddev & $range \\\\\n};
}

print q(\end{tabular}) . qq{\n};

